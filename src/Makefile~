CC = x86_64-linux-gnu-gcc 
INCPATH = -I/usr/xenomai/include -I/usr/xenomai/include -I/usr/xenomai/include/posix -I../include

LIBS = -lnative -L/usr/xenomai/lib -lxenomai -lpthread -lrt -lm -L/home/igh/etherlabmaster-code/lib/.libs -lethercat_rtdm
 
CFLAGS = -D_GNU_SOURCE -D_REENTRANT -D__XENO__ 

TARGET = robot 

# Files 
SOURCES1 = control.c 
OBJECTS1 = control.o 

SOURCES2 = communication.c 
OBJECTS2 = communication.o 

# Build rules 
$(TARGET): $(OBJECTS1) 
	$(CC) $(LFLAGS) -o $(TARGET) $(OBJECTS1) $(OBJECTS2) $(LIBS) 

# Compile 
$(OBJECTS2) : $(SOURCES2)
	$(CC) $(INCPATH) $(CFLAGS) -o $(OBJECTS2) -c $(SOURCES2)

# Compile 
$(OBJECTS1) : $(SOURCES1)
	$(CC) $(INCPATH) $(CFLAGS) -o $(OBJECTS1) -c $(SOURCES1)

clean: 
	rm $(TARGET) *.o 
